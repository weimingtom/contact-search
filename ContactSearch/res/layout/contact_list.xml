<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:padding="8px" android:layout_height="wrap_content" android:orientation="vertical">
		<TextView android:id="@+id/phone" android:layout_width="fill_parent" android:textColor="@color/phone" android:textSize="20dip" android:text="TextView" android:layout_height="wrap_content" android:focusable="false"></TextView>
		<TextView android:id="@+id/name" android:layout_width="fill_parent" android:textColor="@color/text_color" android:textSize="20dip" android:text="TextView" android:layout_height="wrap_content" android:focusable="false"></TextView>
		<TextView android:id="@+id/address" android:layout_width="fill_parent" android:textColor="@color/text_color" android:textSize="20dip" android:text="TextView" android:layout_height="wrap_content" android:focusable="false"></TextView>
	</LinearLayout>