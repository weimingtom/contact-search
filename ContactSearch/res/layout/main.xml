<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:paddingLeft="8dip"
    android:paddingRight="8dip"
    android:paddingTop="6dip"
    android:paddingBottom="16dip"
    android:baselineAligned="false"

    android:orientation="vertical"
	android:layout_height="fill_parent" android:background="@color/background_main">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:layout_marginBottom="-5dip"

        android:orientation="horizontal"

        android:gravity="center_vertical"
        android:baselineAligned="false"

        android:addStatesFromChildren="true">
        <Button android:layout_width="wrap_content" android:id="@+id/btSet" android:layout_height="wrap_content" android:background="@drawable/search_icon"></Button>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1.0"

            android:paddingLeft="8dip"
            android:paddingRight="6dip"

            android:id="@+id/txtSearch"/>

        <Button
            android:layout_marginLeft="1dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:drawableLeft="@drawable/ic_btn_search" android:id="@+id/btSearch" android:background="@color/background_main"/>

    </LinearLayout>
    <ListView android:layout_height="fill_parent" android:layout_width="fill_parent" android:id="@android:id/list"></ListView>
</LinearLayout>
